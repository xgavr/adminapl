<script>         
    $('#phone').mask('8 (000) 000-0000', {selectOnFocus: false});
    
    function submitForm(){
        var data = serializeForm('#cash-in-form');
         $('#cash-in-submit').prop('disabled', true);
        //console.log(data);
        $.ajax({
            type: 'POST',
            url: '/till/edit-cash-in/<?= ($cashDoc) ? $cashDoc->getId():"" ?>',
            data: $.param(data)
        })
            .done(function (data) {
                if (data == 'ok'){
                    $('#cashInModal').modal('hide');
                    //window.location.reload();
                    $('#table').bootstrapTable('refresh');
                } else {
                    $('#cashInModal .modal-content').html(data);                    
                }    
            })
            .fail(function () {
                alert("Ошибка при открытии формы.");

            });    
    };
    
    function cashChange(){
        $.getJSON( '/till/in-kinds/'+$('#cash').val(), function( data ) {
            $('#kind').empty();
            $.each( data.rows, function( key, value ) {
                $('#kind').append('<option value="' + key + '">' + value.name + '</option>');
            });
            showKindGroup();
        });    
        $.getJSON( '/till/legals/'+$('#cash').val(), function( data ) {
            $('#company').empty();
            $.each( data.rows, function( key, value ) {
                $('#company').append('<option value="' + key + '">' + value.name + '</option>');
            });
        });    
    }
    
    function contactName(){
        if ($('#phone').val()){
            $.getJSON( '/till/phone-contact?phone='+$('#phone').val(), function( data ) {
                $('#contactName').html(data.name);

            });            
        }    
    }
    
    function showKindGroup()
    {
        $('#refill').hide();
        $('#cashRefill').attr('required', false);
        if ($("#kind").val() == <?= CashDoc::KIND_IN_REFILL?>){
            $('#refill').show();
            $('#cashRefill').attr('required', true);
        }
        
        $('#userReturn').hide();
        $('#userRefill').attr('required', false);
        if ($("#kind").val() == <?= CashDoc::KIND_IN_RETURN_USER?>){
            $('#userReturn').show();
            $('#userRefill').attr('required', true);
        }

        $('#payment').hide();
        $('#order').attr('required', false);
        $('#legal').attr('required', false);
        $('#phone').attr('required', false);
        if ($("#kind").val() == <?= CashDoc::KIND_IN_PAYMENT_CLIENT?>){
            $('#payment').show();
            $('#phone').attr('required', true);
//            $('#order').attr('required', true);
            //$('#legal').attr('required', true);
        }

        $('#supplierReturn').hide();
        $('#supplier').attr('required', false);
        $('#legal').attr('required', false);
        if ($("#kind").val() == <?= CashDoc::KIND_IN_RETURN_SUPPLIER?>){
            $('#supplierReturn').show();
            $('#supplier').attr('required', true);
            $('#legal').attr('required', true);
        }
    }
    
    $( document ).ready(function() {
        
        showKindGroup();
        contactName();

        $('#kind').on('change', function(){
            showKindGroup();
        });
        $('#cash').on('change', function(){
            cashChange()
        });
        $('#phone').on('change', function(){
            contactName()
        });
        
        
        var forms = $('#cash-in-form');
        
        forms.submit(function() {
            submitForm();
            return false;
        });
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('cash-in-submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
                submitForm();
            }, false);    
        });
    });            
</script>