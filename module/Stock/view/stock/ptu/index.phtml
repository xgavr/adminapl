        btn += ' modal-url="'+url+'">';
        btn += '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>';
        btn += '</button>';

//        var url = '/ptu/delete-ptu/'+row.id;
//        btn += '<button';
//        btn += ' type="button"';
