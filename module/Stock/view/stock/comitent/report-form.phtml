<script>             
    function submitForm(){
        var data = serializeForm('#compensation-form');
         $('#compensation-submit').prop('disabled', true);
        //console.log(data);
        $.ajax({
            type: 'POST',
            url: '/comitent/compensation-edit-form/<?= ($report) ? $report->getId():"" ?>',
            data: $.param(data)
        })
            .done(function (data) {
                if (data == 'ok'){
                    $('#compensationModal').modal('hide');
                    if ($('#table')){
                        $('#table').bootstrapTable('refresh');
                    }    
                    if ($('#mutualtable')){
                        $('#mutualtable').bootstrapTable('refresh');
                    }    
                } else {
                    $('#compensationModal .modal-content').html(data);                    
                }    
            })
            .fail(function () {
                alert("Ошибка при открытии формы.");

            });    
    };
    
    $( document ).ready(function() {
        
        $('#msrgoodtable').bootstrapTable({
            onLoadSuccess: function(res){
                //mspUpdateTotal();
            }            
        }); 
        
    });    
    
    function msrGoodRefreshTable(){
        $('#msrgoodtable').bootstrapTable('refresh');
    }
    
    function msrgoodQueryParams(params) {
        $('#msrgoodtoolbar').find('input[name]').each(function () {
            params[$(this).attr('name')] = $(this).val();
        });
        limit = $('#mspgoodtable .page-size').html();
        if (limit){
            params.limit = limit;
        }    
        offset = $('#mspgoodtable li.page-number.active a').html();
        if (offset){
            params.offset = params.limit * (offset - 1);
        }    
        
        return params;
    }
    
    function goodFormatter(value, row){
        if (row.good){
            var url = '/goods/view/'+row.good.id;
            btn = '<nobr><a';
            btn += ' href="'+url+'"';
            btn += ' class="btn btn-link btn-xs" target="_blank">';
            btn += '<span class="glyphicon glyphicon-link"></span>';
            btn += '</a>'+value+'</nobr>';
            return btn;
        }
        
        return;
    }    
    
    function amountFormatter(value){
        return (Math.round(value*100)/100).toFixed(2);
    }        
        
    function msrActiveFormatter(value, row){
        var url = '/comitent/good-edit-form/';
        btn = '<button';
        btn += ' type="button"';
        btn += ' class="btn btn-default btn-xs msr-good-modal-show"';
        btn += ' aria-label="Left Align"'; 
        btn += ' unique-id="'+row.id+'"';
        btn += ' modal-url="'+url+'">';
        btn += '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>';
        btn += '</button>';
        
        return btn;
    }    
        
    function pgPriceFormatter(value, row){
        return Math.round(value*100/row.quantity)/100;
    }        
    
    function msrgoodResponseHandler(res) {
        return res;
    }     

$( document ).ready(function() {
                
        var forms = $('#compensation-form');
        
        forms.submit(function() {
            submitForm();
            return false;
        });
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('revise-submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
                submitForm();
            }, false);    
        });
    });            
</script>