    function changeDocStatus(mutualRow){
        if (mutualRow.reviseDoc){
            var status = <?= Revise::STATUS_ACTIVE?>;
            if (mutualRow.reviseDoc.status === '<?= Revise::STATUS_ACTIVE?>'){
                status = <?= Revise::STATUS_RETIRED?>;
            }
            $.get( "/revise/status/"+mutualRow.reviseDoc.id+'?status='+status, function(data){
                $('#mutualtable').bootstrapTable('refresh', {silent: true});
            });        
        }         
        if (mutualRow.cashDoc){
            var status = <?= CashDoc::STATUS_ACTIVE?>;
            if (mutualRow.cashDoc.status === '<?= CashDoc::STATUS_ACTIVE?>'){
                status = <?= CashDoc::STATUS_RETIRED?>;
            }
            $.get( "/till/status/"+mutualRow.cashDoc.id+'?status='+status, function(data){
                $('#mutualtable').bootstrapTable('refresh', {silent: true});
            });        
        }         
    }
        
