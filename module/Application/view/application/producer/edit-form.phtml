    function submitForm(){
        // Обязательно: обновить значение textarea перед сериализацией!
        // Trumbowyg не обновляет DOM автоматически при программной отправке
        $('#description').trumbowyg('save');
        
        var data = serializeForm('#producer-form');
         $('#producer-submit').prop('disabled', true);
         
        //console.log(data);
        $.ajax({
            type: 'POST',
            url: '/producer/edit-form/<?= $producer->getId() ?>',
            data: $.param(data)
        })
            .done(function (data) {
                if (data == 'ok'){
                    $('#producerModal').modal('hide');
                    if ($('#table')){
                        $('#table').bootstrapTable('refresh', {silent: true});
                    }    
                } else {
                    $('#producerModal .modal-content').html(data);                    
                }    
            })
            .fail(function () {
                alert("Ошибка при открытии формы.");

            });    
    };
    
    $( document ).ready(function() {
        
        // Инициализация простого редактора
        $('#description').trumbowyg({
            btns: [
                ['bold', 'italic'],
                ['unorderedList', 'orderedList'],
                ['link'],
                ['removeformat']
            ],
            autogrow: true,        // автоматический рост высоты
            removeformatPasted: true, // чистка форматирования при вставке
            semantic: false,       // использовать <b>, <i> вместо <strong>, <em>
            resetCss: true
        });
    
        var forms = $('#producer-form');
        
        forms.submit(function() {
            submitForm();
            return false;
        });
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('producer-submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
                submitForm();
            }, false);    
        });
    });    
</script>
