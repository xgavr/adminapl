<script>
    $('#upload-price-submit').on('click', function() {
        var dialog = bootbox.dialog({
            message: '<p class="text-center"><i class="fa fa-spin fa-spinner"></i>Подождите, пока идет загрузка ...</p>',
            closeButton: false
        });
        
        var file_data = $('#file').prop('files')[0];   
        var form_data = new FormData();                  
        form_data.append('name', file_data);

        $.ajax({
            type: 'POST',
            url: '/supplier/upload-price-form/<?= $supplier->getId() ?>',
            contentType: false,
            processData: false,
            data: form_data
        })
            .done(function (data) {
                dialog.modal('hide');
                if (data == 'ok'){
                    $('#upload-price-modal').modal('hide');
                    //bootbox.alert("Файл успешно загружен.");
                    window.location.reload();
                } else {
                    $('#upload-price-modal-content').html(data);
                }    
            })
            .fail(function () {
                dialog.modal('hide');
                bootbox.alert("Произошла ошибка при выполнении операции.");
            });
    })    
</script>