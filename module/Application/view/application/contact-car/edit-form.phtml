<script>
    $('#contact-car-submit').on('click', function() {
        $.ajax({
            type: 'POST',
            url: '/garage/edit-form/<?= ($contactCar) ? $contactCar->getId():'' ?>?contact=<?= $contact->getId() ?>',
            data: $('#contact-car-form').serialize()
        })
            .done(function (data) {
                if (data == 'ok'){
                    $('#modal-dialog').modal('hide');
                    if ($('#cartable')){
                        $('#cartable').bootstrapTable('refresh');
                    } else {
                        window.location.reload();
                    }    
                } else {
                    $('#modal-content').html(data);
                }    
            })
            .fail(function (e) {
                console.log(e);
                alert("Ошибка при открытии формы.");

            });
    });    
    
    function makeChange(){
        $.getJSON( '/make/models/'+$('#make').val(), function( data ) {
            $('#model').empty();
            $('#car').empty();
            $('#model').append('<option></option>');
            $.each( data.rows, function( key, value ) {
                $('#model').append('<option value="' + key + '">' + value.name + '</option>');
            });
        });    
    }
    
    function modelChange(){
        $.getJSON( '/make/cars/'+$('#model').val(), function( data ) {
            $('#car').empty();
            $('#car').append('<option></option>');
            $.each( data.rows, function( key, value ) {
                $('#car').append('<option value="' + key + '">' + value.name + '</option>');
            });
        });    
    }
    
    $( document ).ready(function() {
        $('#makeName').typeahead({
            source: function(query, process) {
                return $.get("/make/autocomplete?q="+query, function (data) {
                    return process(data);
                });
            },
            changeInputOnSelect: false,
            afterSelect: function(data) {
                $('#make').val(data.id);
                $('#makeName').val(data.name);
                modelChange();
            }
        });
    
        $('#vin').on('input', function(){
            $("#vinLength").html($("#vin").val().length);
        });

        $('#vin2').on('input', function(){
            $("#vin2Length").html($("#vin2").val().length);
        });

        $('#make').on('change', function(){
            makeChange();
        });

        $('#model').on('change', function(){
            modelChange();
        });
    });    
    
</script>