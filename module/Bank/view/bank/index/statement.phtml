        offset = $(tab + ' li.page-number.active a').html();
        if (offset){
            params.offset = params.limit * (offset - 1);
        }    
        
        var rs = new Array();
        $('.bankAccount:checkbox:checked').each(function () {
            rs.push($(this).val());
        });
        
        if (rs.length){
            params.rs = rs;
        }
        
        return params;
        
    }
    
