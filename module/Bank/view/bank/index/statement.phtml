        btn += ' type="button"';
        btn += ' class="btn '+checkClass+' btn-xs statement-to-cash-doc"';
        btn += ' aria-label="Left Align"'; 
        btn += ' modal-url="'+url+'" title="Связать с кассой">';
        btn += '<span class="glyphicon glyphicon-check" aria-hidden="true"></span>';
        btn += '</button>';
        var cashDocId = '';
        if (row.cashDoc){
            cashDocId = row.cashDoc.id;
        }
        if (row.amount>0){
            var url = '/till/edit-cash-in/'+cashDocId+'?statement='+row.id;
            btn += '<button';
            btn += ' type="button"';
            btn += ' class="btn '+btnClass+' btn-xs cash-in-modal-show"';
            btn += ' aria-label="Left Align"'; 
            btn += ' modal-url="'+url+'">';
            btn += '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>';
            btn += '</button>';
        }    
        if (row.amount<0){
            var url = '/till/edit-cash-out/'+cashDocId+'?statement='+row.id;
